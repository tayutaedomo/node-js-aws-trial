<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <form method="post" action="/dynamodb/sdk/put_item">
      <div class="form-group">
        <label>Artist</label>
        <input type="text" name="artist" value="No One You Know" class="form-control">
      </div>

      <div class="form-group">
        <label>SongTitle</label>
        <input type="text" name="song_title" value="Call Me Today" class="form-control">
      </div>

      <div class="form-group">
        <label>AlbumTitle</label>
        <input type="text" name="album_title" value="Somewhat Famous" class="form-control">
      </div>

      <button type="submit" class="btn btn-info">Put</button>
    </form>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-sm-12">
    <% if (data) { %>
      <pre class="bg-info"><code><%= beautify(JSON.stringify(data), { indent_size: 2 }) %></code></pre>
    <% } %>
  </div>
</div>

