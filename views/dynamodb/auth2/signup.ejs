<% layout('layout') %>

<h1><%= title %></h1>


<% if (data.success) { %>
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-success" role="alert"><%= data.success %></div>
    </div>
  </div>
<% } %>

<% if (data.error) { %>
  <div class="row">
    <div class="col-sm-12">
      <div class="alert alert-danger" role="alert"><%= data.error %></div>
    </div>
  </div>
<% } %>


<div class="row">
  <div class="col-sm-6 col-md-4">
    <form method="post" action="/dynamodb/auth2/signup">
      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" value="<%= data.form_email %>" class="form-control">
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="form-control">
      </div>

      <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" value="<%= data.form_name %>" class="form-control">
      </div>

      <button type="submit" class="btn btn-info">Sign up</button>
    </form>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-sm-12">
    <% if (data) { %>
      <pre class="bg-info"><code><%= beautify(JSON.stringify(data), { indent_size: 2 }) %></code></pre>
    <% } %>
  </div>
</div>

